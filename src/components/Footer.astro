---
const currentYear = new Date().getFullYear();

const footerColumns = [
  {
    title: 'Company',
    links: [
      { href: '#', label: 'About Us' },
      { href: '#', label: 'Our Team' },
      { href: '#', label: 'Careers' },
      { href: '#', label: 'Contact' }
    ]
  },
  {
    title: 'Services',
    links: [
      { href: '#', label: 'Executive Coaching' },
      { href: '#', label: 'Workshops' },
      { href: '#', label: 'Consulting' },
      { href: '#', label: 'Assessments' }
    ]
  },
  {
    title: 'Resources',
    links: [
      { href: '#', label: 'Blog' },
      { href: '#', label: 'Case Studies' },
      { href: '#', label: 'White Papers' },
      { href: '#', label: 'Newsletter' }
    ]
  },
  {
    title: 'Connect',
    links: [
      { href: '#', label: 'LinkedIn' },
      { href: '#', label: 'Twitter' },
      { href: '#', label: 'YouTube' },
      { href: '#', label: 'Email Us' }
    ]
  }
];
---

<footer>
  <div class="footer-container">
    {footerColumns.map(column => (
      <div class="footer-column">
        <h4>{column.title}</h4>
        <ul>
          {column.links.map(link => (
            <li><a href={link.href}>{link.label}</a></li>
          ))}
        </ul>
      </div>
    ))}
  </div>
  <div class="footer-bottom">
    <p>&copy; {currentYear} AI Leadership. All rights reserved.</p>
  </div>
</footer>

<style>
  footer {
    background: var(--deep-navy);
    color: white;
    padding: 3rem 2rem 2rem;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .footer-column h4 {
    margin-bottom: 1rem;
    color: var(--accent-coral);
  }

  .footer-column ul {
    list-style: none;
  }

  .footer-column a {
    color: var(--light-neutral);
    text-decoration: none;
    line-height: 2;
    transition: color 0.3s;
  }

  .footer-column a:hover {
    color: var(--accent-coral);
  }

  .footer-bottom {
    text-align: center;
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    color: var(--light-neutral);
  }
</style>